#:kivy 1.11
#:import Graph kivy.garden.graph.Graph

<ChaosPlotter>:
    graph: graph
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        size: root.size

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1.0, 0.25
            pos_hint: {'x': 0.0}

            TickSlider:
                id: population_start
                sensitivity: "handle"
                orientation: "vertical"
                min: 0
                max: 1
                step: 0.01
                value: root.population
                size_hint: 0.05, 1.0
                pos_hint: {'x': 0.0}
                on_value: root.population = self.value
                ticks_major: 1
                ticks_minor: 5

            Graph:
                id: graph
                xlabel: 'Iterations'
                ylabel: 'Population'
                x_ticks_minor: 5
                x_ticks_major: 25
                y_ticks_major: 0.1
                y_grid_label: True
                x_grid_label: True
                padding: 5
                x_grid: True
                y_grid: True
                xmin: 0
                xmax: 1000
                ymin: 0
                ymax: 1
                size_hint: 0.95, 1.0

        BoxLayout:
            size_hint: 1.0, 0.1
            TickSlider:
                id: r_factor
                orientation: "horizontal"
                sensitivity: "handle"
                min: 0
                max: 4
                step: 0.001
                value: root.r
                size_hint_y: 1.0
                on_value: root.r = self.value
                ticks_major: 1
                ticks_minor: 5
                value_track: True
                value_track_color: 0.2, 0.71, 0.9, 1.0

        BoxLayout:
            size_hint: 1.0, 0.65
            
            Label:
                size_hint: 1.0, 1.0
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos


